{
  "name": "webpack-gui",
  "version": "0.1.0",
  "private": false,
  "license": "WTFPL",
  "publicUrl": "",
  "scripts": {
    "precommit": "lint-staged",
    "start": "webpack-dev-server --mode development --open",
    "clean": "rm -rf ./build",
    "build": "npm run clean && webpack --mode production",
    "publish": "rsync -avz --chmod=ugo=rwX --del dist/ 4x/",
    "release": "npm run build && npm run publish",
    "fix": "standard --fix | snazzy",
    "analize-bundle": "NODE_ENV=production webpack --profile --json > stats.json && webpack-bundle-analyzer stats.json"
  },
  "standard": {
    "parser": "babel-eslint",
    "ignore": [
      "**/dist/"
    ]
  },
  "lint-staged": {
    "*.js": [
      "standard --fix",
      "git add"
    ],
    "*.{json,css,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "devDependencies": {
    "babel-core": "^6.26.3",
    "babel-eslint": "^8.2.3",
    "babel-loader": "^7.1.4",
    "babel-plugin-syntax-dynamic-import": "^6.18.0",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "copy-webpack-plugin": "^4.5.1",
    "css-loader": "^0.28.11",
    "eslint": "^4.19.1",
    "eslint-plugin-react": "^7.8.2",
    "file-loader": "^1.1.11",
    "html-loader": "^0.5.5",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^0.14.3",
    "lint-staged": "^7.1.0",
    "postcss-cssnext": "^3.1.0",
    "postcss-import": "^11.1.0",
    "postcss-loader": "^2.1.5",
    "postcss-url": "^7.3.2",
    "raw-loader": "^0.5.1",
    "snazzy": "^7.1.1",
    "standard": "^11.0.1",
    "style-loader": "^0.21.0",
    "webpack": "^4.8.3",
    "webpack-bundle-analyzer": "^2.12.0",
    "webpack-cli": "^2.1.3",
    "webpack-dev-server": "^3.1.4"
  },
  "dependencies": {
    "@fortawesome/fontawesome": "^1.1.8",
    "@fortawesome/fontawesome-free-regular": "^5.0.13",
    "@fortawesome/fontawesome-free-solid": "^5.0.13",
    "bulma": "^0.7.1",
    "classnames": "^2.2.5",
    "clipboard": "^2.0.1",
    "core-js": "^2.5.6",
    "font-awesome": "^4.7.0",
    "prismjs": "^1.14.0",
    "react": "^16.3.2",
    "react-autobind": "^1.0.6",
    "react-dom": "^16.3.2",
    "react-inner-html": "^1.0.1",
    "stringify-object": "^3.2.2"
  }
}
